{
  "_comment": "Media Gathering Agent Configuration - Cartoon/Illustration Optimized",
  "_usage": "Use this config for cartoon and illustration-focused searches",
  "_use_case": "Handout 1 (SLP Info) - Children illustrations, educational artwork",
  
  "search": {
    "max_search_queries": 6,
    "results_per_source": 8,
    "_comment": "More queries and results for better cartoon discovery"
  },
  
  "scoring": {
    "min_final_score": 55.0,
    "_comment": "Slightly higher threshold to ensure cartoon quality",
    
    "style_confidence_weight": 0.35,
    "_comment": "HIGHER weight for style matching (cartoon is critical)",
    
    "quality_weight": 0.35,
    "relevance_weight": 0.55,
    
    "base_quality_score": 70.0,
    "base_relevance_score": 45.0,
    "base_style_confidence": 0.6,
    "_comment": "Higher base style confidence for cartoon content"
  },
  
  "quality_bonuses": {
    "quality_bonus_fhd": 12.0,
    "quality_bonus_hd": 8.0,
    "quality_bonus_cc0": 12.0,
    "quality_bonus_free": 6.0
  },
  
  "relevance": {
    "keyword_match_weight": 45.0,
    "_comment": "Slightly higher keyword weight for better matching"
  },
  
  "style_validation": {
    "cartoon": {
      "positive": [
        "cartoon", "illustration", "animated", "illustrated", "comic",
        "drawing", "vector", "art", "sketch", "hand-drawn", "cute",
        "stylized", "graphic", "design", "artwork", "painter",
        "children", "kid", "colorful", "simple", "friendly",
        "educational", "learning", "playful", "whimsical",
        "character", "mascot", "digital art"
      ],
      "negative": [
        "photo", "photograph", "real", "stock photo", "candid",
        "camera", "photographer", "realistic", "portrait",
        "professional photography", "people"
      ]
    },
    "photo": {
      "positive": [
        "photo", "photograph", "real", "stock photo", "professional"
      ],
      "negative": [
        "cartoon", "illustration", "animated", "drawn", "vector"
      ]
    }
  },
  
  "timeouts": {
    "api_timeout": 5,
    "download_timeout": 10
  },
  
  "retry": {
    "max_retries": 3,
    "retry_delay_base": 1.0
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}
